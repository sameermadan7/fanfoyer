<script>
  // demo data
  const creators = [
    {id:1,name:'Nisha',emoji:'üíÉ',viewers:330,live:true,room:'Dance Drop'},
    {id:2,name:'Asha',emoji:'üé§',viewers:128,live:true,room:'Acoustic Q&A'},
    {id:3,name:'Ravi',emoji:'üé∏',viewers:58,live:true,room:'Guitar Riffs'},
    {id:4,name:'Maya',emoji:'üé®',viewers:86,live:true,room:'Speedpaint'},
    {id:5,name:'Karan',emoji:'üéÆ',viewers:12,live:false,room:'Gaming Chill'},
    {id:6,name:'Sana',emoji:'üéß',viewers:45,live:true,room:'Beat Session'},
  ];
  const rooms = [
    {id:201,title:'Dance Drop',creator:'Nisha',live:true,views:330,thumbnail:'',desc:'High-energy dance set'},
    {id:202,title:'Acoustic Q&A',creator:'Asha',live:true,views:128,thumbnail:'',desc:'Songs + chat'},
    {id:203,title:'Guitar Riffs',creator:'Ravi',live:false,views:58,thumbnail:'',desc:'Short guitar clip'},
    {id:204,title:'Speedpaint',creator:'Maya',live:true,views:86,thumbnail:'',desc:'Watch a painting come alive'},
    {id:205,title:'Gaming Chill',creator:'Karan',live:false,views:12,thumbnail:'',desc:'Casual game stream'},
    {id:206,title:'Beat Session',creator:'Sana',live:true,views:45,thumbnail:'',desc:'Live beat-making'},
  ];

  // populate creators strip
  const strip = document.getElementById('creatorsStrip');
  creators.forEach(c=>{
    const el = document.createElement('div');
    el.className='creator-card';
    el.innerHTML = `<div class="creator-top"><div class="creator-avatar">${c.emoji}</div><div style="flex:1"><div class="creator-name">${c.name}</div><div class="small">${c.room}</div></div></div><div class="viewer-count">${c.viewers} viewers</div>`;
    el.onclick = ()=> joinRoom(c);
    strip.appendChild(el);
  });

  // populate rooms grid
  const grid = document.getElementById('roomsGrid');
  function renderGrid(){
    grid.innerHTML='';
    rooms.forEach(r=>{
      const node = document.createElement('div');
      node.className='room';
      node.innerHTML = `<div class="thumb">${r.title} ‚Äî ${r.creator}</div><div class="info"><div style="font-weight:800">${r.creator}</div><div class="small">${r.views} viewers</div></div>`;
      if(r.live){
        const lt = document.createElement('div'); lt.className='live-tag'; lt.textContent='LIVE'; node.appendChild(lt);
      }
      node.onclick = ()=> joinRoom({name:r.creator,emoji:'üé¨',live:r.live,room:r.title});
      grid.appendChild(node);
    });
  }
  renderGrid();

  // nav behavior
  document.querySelectorAll('.nav-item').forEach(n=>{
    n.addEventListener('click', ()=>{
      document.querySelectorAll('.nav-item').forEach(x=>x.classList.remove('active'));
      n.classList.add('active');
      const key = n.getAttribute('data-key');
      if(key==='home'){ window.scrollTo({top:0,behavior:'smooth'}); }
      if(key==='discover'){ alert('Discover ‚Äî demo placeholder'); }
      if(key==='live'){ document.querySelector('.hero-banner').scrollIntoView({behavior:'smooth'}); }
      if(key==='chat'){ document.getElementById('openChatBtn').click(); }
      if(key==='profile'){ alert('Profile ‚Äî demo placeholder'); }
    });
  });

  // chat widget behavior
  const chatWidget = document.getElementById('chatWidget');
  document.getElementById('openChatBtn').onclick = ()=> {
    chatWidget.style.display='block';
    chatWidget.setAttribute('aria-hidden','false');
  };
  document.getElementById('closeChat').onclick = ()=> {
    chatWidget.style.display='none';
    chatWidget.setAttribute('aria-hidden','true');
  };
  document.getElementById('sendMsg').onclick = sendMessage;
  document.getElementById('chatInput').addEventListener('keydown', function(e){
    if(e.key==='Enter') sendMessage();
  });
  function sendMessage(){
    const input = document.getElementById('chatInput');
    if(!input.value) return;
    const m = document.createElement('div');
    m.className='msg me';
    m.textContent = input.value;
    document.getElementById('messages').appendChild(m);
    input.value='';
    const msgs = document.getElementById('messages'); msgs.scrollTop = msgs.scrollHeight;
  }

  // join room simulation
  function joinRoom(creator){
    chatWidget.style.display='block';
    chatWidget.setAttribute('aria-hidden','false');
    const msgs = document.getElementById('messages');
    const joinMsg = document.createElement('div');
    joinMsg.className='msg them';
    joinMsg.textContent = `You joined ${creator.name}'s room ‚Äî ${creator.room || ''} üéâ`;
    msgs.appendChild(joinMsg);
    msgs.scrollTop = msgs.scrollHeight;
  }

  // featured join
  document.getElementById('joinFeatured').onclick = ()=> joinRoom({name:'Nisha',emoji:'üíÉ',room:'Dance Drop',live:true});

  // explore scroll
  document.getElementById('exploreBtn').onclick = ()=> {
    document.querySelector('.grid').scrollIntoView({behavior:'smooth'});
  };

  // go live / role toggle (demo)
  document.getElementById('goLiveBtn').onclick = ()=> {
    alert('Demo: This would open streaming tools to go live.');
    document.getElementById('toggleRole').textContent='Creator Mode';
  };

  // start/stop room simulation
  document.getElementById('startRoomBtn').onclick = ()=> {
    document.getElementById('roomStatus').textContent='Live';
    document.getElementById('startRoomBtn').disabled=true;
    document.getElementById('stopRoomBtn').disabled=false;
    rooms.unshift({id:999,title:'Your Live Room',creator:'You',live:true,views:1,desc:'Live now'});
    renderGrid();
    joinRoom({name:'You',room:'Your Live Room'});
  };
  document.getElementById('stopRoomBtn').onclick = ()=> {
    document.getElementById('roomStatus').textContent='Offline';
    document.getElementById('startRoomBtn').disabled=false;
    document.getElementById('stopRoomBtn').disabled=true;
    const idx = rooms.findIndex(r=>r.creator==='You');
    if(idx>-1) rooms.splice(idx,1);
    renderGrid();
  };

  // auth buttons demo
  document.getElementById('signupBtn').onclick = ()=> alert('Sign Up demo ‚Äî registration flow placeholder');
  document.getElementById('loginBtn').onclick = ()=> alert('Log In demo ‚Äî auth flow placeholder');

  // small responsive tweak: hide top nav labels on narrow screens
  function adjustNav(){
    if(window.innerWidth < 720){
      document.querySelectorAll('.nav-item .label').forEach(l=>l.style.display='none');
    } else {
      document.querySelectorAll('.nav-item .label').forEach(l=>l.style.display='inline');
    }
  }
  window.addEventListener('resize', adjustNav);
  adjustNav();

</script>
</body>
</html>
